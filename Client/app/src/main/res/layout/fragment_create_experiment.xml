<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Fragment.CreateExperimentFragment">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/experiment_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/experiment_name"
        app:met_floatingLabel="normal"
        app:met_primaryColor="#000"
        tools:text="Experiment name" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/experiment_author_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/author_name"
        app:met_floatingLabel="normal"
        app:met_primaryColor="#000"
        tools:text="Experiment author" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/expected_end_date" />

    <DatePicker
        android:id="@+id/end_date_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />
</LinearLayout>